<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.penguin.memo.post.repository.PostRepository">
  	
  	<insert id="insertPost" parameterType="map">
  		INSERT INTO 
  				`memo_post`
  			(
  			
	  			`userId`
				, `title`
				, `content`
				, `imagePath`			
  			)
  			VALUE
  			(
  				#{userId}
  				, #{title}
  				, #{content}
  				, #{imagePath}
  			
  			)
  			
  	
  	</insert>
  
  	<select id="selectPostList" parameterType="int"
  	resultType="com.penguin.memo.post.domain.Post">
 			 SELECT
 			 	`id`
 			 	, `userId`
				, `title`
				, `content`
				, `imagePath`
				, `createdAt`
				, `updatedAt`
			FROM	 
  				`memo_post`
  			WHERE 
  				`userId` = 	#{userId}
  			ORDER BY	
  				`id` DESC
  	
  	</select>
  
  
  
	  <select id=" selectPost" parameterType="int"
	  resultType="com.penguin.memo.post.domain.Post">
	  		  SELECT
 			 	`id`
 			 	, `userId`
				, `title`
				, `content`
				, `imagePath`
				, `createdAt`
				, `updatedAt`
			FROM	 
  				`memo_post`
  			WHERE
  					`id` = #{id}
	  
	  
	  
	  
	  
	  
	  </select>
  
  
  
  
  
  
  
  
  	
  
  </mapper>